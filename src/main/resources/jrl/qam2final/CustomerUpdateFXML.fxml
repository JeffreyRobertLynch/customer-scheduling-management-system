<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.control.Button?>

<AnchorPane xmlns="http://javafx.com/javafx/17" prefHeight="580.0" prefWidth="560.0" xmlns:fx="http://javafx.com/fxml/1" fx:controller="jrl.qam2final.Controller.CustomerUpdateController">
    <Label fx:id="updateCustomerNameLabel" text="Customer Name" layoutX="70.0" layoutY="130.0">
    </Label>
    <TextField fx:id="updateCustomerNameTextField" layoutX="220.0" layoutY="130.0" prefHeight="26.0" prefWidth="210.0" promptText="Customer Name" />
    <TextField fx:id="updateCustomerAddressTextField" layoutX="220.0" layoutY="190.0" prefHeight="26.0" prefWidth="210.0" promptText="Address" />
    <Label fx:id="updateCustomerAddressLabel" text="Address" layoutX="70.0" layoutY="190.0">
    </Label>
    <Label fx:id="updateCustomerPostalCodeLabel" text="Postal Code" layoutX="70.0" layoutY="250.0">
    </Label>
    <TextField fx:id="updateCustomerPostalCodeTextField" layoutX="220.0" layoutY="250.0" prefHeight="26.0" prefWidth="210.0" promptText="Postal Code" />
    <TextField fx:id="updateCustomerPhoneNumberTextField" layoutX="220.0" layoutY="310.0" prefHeight="26.0" prefWidth="210.0" promptText="Phone Number" />
    <Label fx:id="updateCustomerCountryLabel" text="Country" layoutX="70.0" layoutY="370.0">
    </Label>
    <ComboBox fx:id="updateCustomerCountryComboBox" onAction="#onActionDivisionFromCountryCUC" layoutX="220.0" layoutY="370.0" prefWidth="210.0" promptText="Country" visibleRowCount="5" />
    <Label fx:id="updateCustomerDivisionLabel" text="Division" layoutX="70.0" layoutY="430.0">
    </Label>
    <ComboBox fx:id="updateCustomerDivisionComboBox" layoutX="220.0" layoutY="430.0" prefWidth="210.0" promptText="Division" visibleRowCount="5" />
    <Label fx:id="updateCustomerPhoneNumberLabel" text="Phone Number" layoutX="70.0" layoutY="310.0">
    </Label>
    <TextField fx:id="updateCustomerIdTextField" disable="true" layoutX="220.0" layoutY="70.0" prefHeight="26.0" prefWidth="210.0" promptText="Disabled" />
    <Label fx:id="updateCustomerIdLabel" text="Customer ID" layoutX="70.0" layoutY="70.0">
    </Label>
    <Button fx:id="updateCustomerSaveButton" layoutX="70.0" layoutY="480.0" mnemonicParsing="false" onAction="#onActionSaveUpdatedCustomerCUC" prefHeight="26.0" prefWidth="80.0" text="Save" />
    <Button fx:id="updateCustomerCancelButton" layoutX="170.0" layoutY="480.0" mnemonicParsing="false" onAction="#onActionCancelUpdatedCustomerCUC" prefHeight="26.0" prefWidth="80.0" text="Cancel" />
    <Label fx:id="updateCustomerHeaderLabel" prefWidth="260.0" layoutX="70.0" layoutY="20.0" text="Update Customer">
        <font>
            <Font size="20.0" />
        </font>
    </Label>
</AnchorPane>